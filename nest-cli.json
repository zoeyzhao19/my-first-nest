{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false,
    "flat": true
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "mediator": {
      "type": "library",
      "root": "libs/mediator",
      "entryFile": "index",
      "sourceRoot": "libs/mediator/src",
      "compilerOptions": {
        "tsConfigPath": "libs/mediator/tsconfig.lib.json"
      }
    }
  }
}